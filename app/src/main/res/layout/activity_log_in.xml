<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_list">



<TextView
    android:text="language:English(United States)"
    android:gravity="center"
    android:textSize="16sp"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    android:textColor="@color/colorWhite"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="EnterUsername or Email"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@id/imageView"
       android:textColorHint="@color/colorWhite" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        android:layout_below="@id/editText"
        android:textColorHint="@color/colorWhite"/>

    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
         android:layout_below="@id/editText2"
        android:textColor="@color/colorWhite"
        android:layout_margin="@null"/>

    <TextView
        android:text="forgot your password? Get help signing in

         OR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_below="@id/button"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageButton"
        android:layout_below="@id/textView2"
        android:text="Log in with facebook"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@mipmap/facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

    <Button
        android:text="Don't have an account? sign  up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUp"
       android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/half_overlay"/>



</RelativeLayout>